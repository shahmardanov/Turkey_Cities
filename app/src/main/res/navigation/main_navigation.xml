<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashHomeFragment">

    <fragment
        android:id="@+id/splashHomeFragment"
        android:name="com.example.turkeycities.splash.SplashHomeFragment"
        android:label="fragment_splash_home"
        tools:layout="@layout/fragment_splash_home" >
        <action
            android:id="@+id/action_splashHomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.turkeycities.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>